tasks = []
def print_menu
  puts "\nğŸ“ --- ĞœĞ•ĞĞ® Ğ¡ĞŸĞ˜Ğ¡ĞšĞ£ Ğ¡ĞŸĞ ĞĞ’ ---"
  puts "1. â• Ğ”Ğ¾Ğ´Ğ°Ñ‚Ğ¸ Ğ·Ğ°Ğ´Ğ°Ñ‡Ñƒ"
  puts "2. ğŸ“‹ ĞŸĞ¾ĞºĞ°Ğ·Ğ°Ñ‚Ğ¸ Ğ²ÑÑ– Ğ·Ğ°Ğ´Ğ°Ñ‡Ñ–"
  puts "3. ğŸ—‘ Ğ’Ğ¸Ğ´Ğ°Ğ»Ğ¸Ñ‚Ğ¸ Ğ·Ğ°Ğ´Ğ°Ñ‡Ñƒ"
  puts "4. ğŸšª Ğ’Ğ¸Ğ¹Ñ‚Ğ¸"
  print "ğŸ‘‰ ĞĞ±ĞµÑ€Ñ–Ñ‚ÑŒ Ğ¾Ğ¿Ñ†Ñ–Ñ (1-4): "
