loop do
  print_menu
  choice = gets.chomp.to_i

  case choice
  when 1
    print "âœï¸ Ğ’Ğ²ĞµĞ´Ñ–Ñ‚ÑŒ Ğ½Ğ¾Ğ²Ñƒ Ğ·Ğ°Ğ´Ğ°Ñ‡Ñƒ: "
    task = gets.chomp.strip
    if task.empty?
      puts "âš ï¸ Ğ—Ğ°Ğ´Ğ°Ñ‡Ğ° Ğ½Ğµ Ğ¼Ğ¾Ğ¶Ğµ Ğ±ÑƒÑ‚Ğ¸ Ğ¿Ğ¾Ñ€Ğ¾Ğ¶Ğ½ÑŒĞ¾Ñ!"
    else
      tasks << task
      puts "âœ… Ğ—Ğ°Ğ´Ğ°Ñ‡Ñƒ Ğ´Ğ¾Ğ´Ğ°Ğ½Ğ¾!"
    end

  when 2
    puts "\nğŸ“‹ Ğ’Ğ°ÑˆÑ– Ğ·Ğ°Ğ´Ğ°Ñ‡Ñ–:"
    if tasks.empty?
      puts "ğŸ“­ Ğ¡Ğ¿Ğ¸ÑĞ¾Ğº Ğ¿Ğ¾Ñ€Ğ¾Ğ¶Ğ½Ñ–Ğ¹."
    else
      tasks.each_with_index { |task, index| puts "#{index + 1}. #{task}" }
    end

  when 3
    if tasks.empty?
      puts "âŒ ĞĞµĞ¼Ğ°Ñ” Ğ·Ğ°Ğ´Ğ°Ñ‡ Ğ´Ğ»Ñ Ğ²Ğ¸Ğ´Ğ°Ğ»ĞµĞ½Ğ½Ñ."
    else
      puts "\nğŸ—‘ Ğ’Ğ¸Ğ±ĞµÑ€Ñ–Ñ‚ÑŒ Ğ½Ğ¾Ğ¼ĞµÑ€ Ğ·Ğ°Ğ´Ğ°Ñ‡Ñ– Ğ´Ğ»Ñ Ğ²Ğ¸Ğ´Ğ°Ğ»ĞµĞ½Ğ½Ñ:"
      tasks.each_with_index { |task, index| puts "#{index + 1}. #{task}" }
      print "ğŸ§® Ğ’Ğ²ĞµĞ´Ñ–Ñ‚ÑŒ Ğ½Ğ¾Ğ¼ĞµÑ€ Ğ·Ğ°Ğ´Ğ°Ñ‡Ñ–: "
      index = gets.chomp.to_i - 1

      if index.between?(0, tasks.length - 1)
        removed = tasks.delete_at(index)
        puts "ğŸ—‘ Ğ—Ğ°Ğ´Ğ°Ñ‡Ñƒ '#{removed}' Ğ²Ğ¸Ğ´Ğ°Ğ»ĞµĞ½Ğ¾!"
      else
        puts "âš ï¸ ĞĞµĞ¿Ñ€Ğ°Ğ²Ğ¸Ğ»ÑŒĞ½Ğ¸Ğ¹ Ğ½Ğ¾Ğ¼ĞµÑ€. Ğ¡Ğ¿Ñ€Ğ¾Ğ±ÑƒĞ¹Ñ‚Ğµ Ñ‰Ğµ Ñ€Ğ°Ğ·."
      end
    end

  when 4
    puts "ğŸ‘‹ Ğ”Ğ¾ Ğ·ÑƒÑÑ‚Ñ€Ñ–Ñ‡Ñ–! ĞŸÑ€Ğ¾Ğ³Ñ€Ğ°Ğ¼Ñƒ Ğ·Ğ°Ğ²ĞµÑ€ÑˆĞµĞ½Ğ¾."
    break

  else
    puts "âš ï¸ ĞĞµĞ²Ñ–Ğ´Ğ¾Ğ¼Ğ° ĞºĞ¾Ğ¼Ğ°Ğ½Ğ´Ğ°. ĞĞ±ĞµÑ€Ñ–Ñ‚ÑŒ Ğ²Ñ–Ğ´ 1 Ğ´Ğ¾ 4."
