<html lang="uk">
<head>
  <meta charset="UTF-8">
  <title>Форма особистої інформації</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #eef1f5;
      padding: 40px;
    }

    form {
      background: white;
      padding: 25px;
      max-width: 400px;
      margin: auto;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
      text-align: center;
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-top: 15px;
      font-weight: bold;
    }

    input {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    .error {
      color: red;
      font-size: 0.9em;
      margin-top: 3px;
    }

    button {
      margin-top: 20px;
      padding: 10px;
      width: 100%;
      background-color: #007BFF;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
    }

    button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>

  <form id="infoForm">
    <h2>Особиста інформація</h2>

    <label for="name">Ім'я:</label>
    <input type="text" id="name" name="name">
    <div class="error" id="nameError"></div>

    <label for="email">Email:</label>
    <input type="text" id="email" name="email">
    <div class="error" id="emailError"></div>

    <label for="age">Вік:</label>
    <input type="number" id="age" name="age">
    <div class="error" id="ageError"></div>

    <button type="submit">Відправити</button>
  </form>

  <script>
    document.getElementById("infoForm").addEventListener("submit", function(event) {
      event.preventDefault();
      document.getElementById("nameError").textContent = "";
      document.getElementById("emailError").textContent = "";
      document.getElementById("ageError").textContent = "";

      const name = document.getElementById("name").value.trim();
      const email = document.getElementById("email").value.trim();
      const age = parseInt(document.getElementById("age").value);

      let valid = true;

      if (name === "") {
        document.getElementById("nameError").textContent = "Ім'я обов'язкове";
        valid = false;
      }

      if (!email.includes("@")) {
        document.getElementById("emailError").textContent = "Email має містити '@'";
        valid = false;
      }

      if (isNaN(age) || age <= 0) {
        document.getElementById("ageError").textContent = "Вік має бути числом більше 0";
        valid = false;
      }

      if (valid) {
        alert("Форму подано!");
      }
    });
  </script>

</body>
</html>
